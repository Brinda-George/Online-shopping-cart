
@{
    ViewBag.Title = "Notification";
    Layout = "~/Views/Shared/_SellerLayout.cshtml";
}
<style>
    .webGrid {
        border: 1px solid;
        margin-top: 30px;
        width: 1200px;
    }

        .webGrid tr {
            border: 1px solid #C0C0C0;
            height: 50px;
        }

            .webGrid tr:hover {
                background-color: #F5F5F5;
            }

        .webGrid th, .webGrid td {
            border: 1px solid #C0C0C0;
            padding-left: 20px;
            width: 50px;
        }



    .header {
        background-color: #E5E7E9;
        height: 40px;
        margin-left: 10px;
    }

        .header th {
            border: 0.5px solid #C0C0C0;
            padding-left: 20px;
        }

    .altColor {
        background-color: #ECF0F1;
    }

    .btn {
        padding: 10px 24px;
        box-shadow: 0 1px 1px 0 rgba(0,0,0,0.24),0 1px 1px 0 rgba(0,0,0,0.19);
    }


    .clickable {
        cursor: pointer;
        background: #ffff99;
    }
</style>
@{
    var grid = new WebGrid(source: @ViewBag.orderlist, canPage: true, rowsPerPage: 5, selectionFieldName: "selectedRow");
}
@grid.GetHtml(
         tableStyle: "webGrid", headerStyle: "header", alternatingRowStyle: "altColor", selectedRowStyle: "clickable",

    columns: new[]
    {


        grid.Column(columnName:"ServiceName", header: "Service Name"),
          grid.Column(columnName:"ProductName", header: "Product Name"),
           grid.Column(columnName:"UserName", header: "Buyer")

        }
        )


